<Root>:
    Login

<Login@BoxLayout>:
    orientation: "vertical"
    Label:
        text: "Login"
        font_size: 40
    BoxLayout:
        height: "40dp"
        size_hint_y: None 
        padding: [10, 0, 80, 0]
        Label:
            text: "Username: "
            size_hint_x: 50
            font_size: 30
        TextInput:
            size_hint_x: 50
            id: username
    BoxLayout:
        height: "40dp"
        size_hint_y: None 
        padding: [10, 0, 80, 0]
        Label:
            text: "Password: "
            size_hint_x: 50
            font_size: 30
        TextInput:
            size_hint_x: 50
            id: password
    BoxLayout:
        orientation: "vertical"
        height: "400dp"
        size_hint_y: None 
        padding: [300, 0, 0, 100]
        Button:
            text: 'Login'
            size: ("200dp", "70dp")
            size_hint: (None, None)
            on_press: app.root.validate(username.text, password.text, result)
            font_size: 25
        Button:
            text: 'Sign Up'
            size: ("200dp", "70dp")
            size_hint: (None, None)
            font_size: 25
            on_press: app.root.signUpPage()
        Label:
            text: ''
            size: ("200dp", "70dp")
            size_hint: (None, None)
            font_size: 25
            id: result
            
